<div class="user-signup">

{{#if showingLogin}}
    <h1>Usu√°rio</h1>
    <p>
      {{paper-input
        label=""
        value=username
        onChange=(action (mut username))
        type="email"
      }}
    </p>

    <h1 style="margin-top: 45px;">Senha</h1>
