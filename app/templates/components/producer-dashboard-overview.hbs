<div class="producer-dashboard-detail">
    <h1>Bem-vindo</h1>
    <span>Resumo de todas as suas transações</span>
    <div class="transactions">
        {{#paper-card class="box-big" as |card|}}
        <p class="flex-50">Extrato</p>
            <table>
                <tr class="header">
                    <th>Data</th>
                    <th class="name">Produto</th>
                    <th>Quantidade</th>
                    <th>Custo</th>
                </tr>
                {{#each historic as |item|}}
                    <tr>
                        <th>{{item.date}}</th>
                        <th class="name">{{item.productName}}</th>
                        <th class="name">{{item.quantity}}</th>
                        <th>{{item.cost}}</th>
                    </tr>
                    {{else}}
                        Nenhuma transação
                {{/each}}
            </table>
        {{/paper-card}}
    </div>
</div>