<div class="producer-dashboard-detail">
    <h1>Bem-vindo</h1>
    <span>Resumo de todas as suas transações</span>
    <div class="transactions">
        {{#paper-card class="box-big" as |card|}}
            <div style="display: flex; flex-direction: row; justify-content: space-between;">
                <p class="flex-50">Extrato Produtor</p>
                <span class="flex-50" style="margin-top: 40px; margin-right: 10px;">
                    {{#paper-button href="" }}Ver todos{{/paper-button}}
                </span>
            </div>
            <table>
                <tr class="header">
                    <th class="name">Produto</th>
                    <th>Quantidade total</th>
                    <th>Preço Médio</th>
                    <th>Valor Total</th>
                </tr>
                {{#each products as |item|}}
                    <tr>
                        <th class="name">{{item.name}}</th>
                        <th>{{item.totalQuantity}}</th>
                        <th>{{item.averagePrice}}</th>
                        <th>{{item.totalValue}}</th>
                    </tr>
                    {{else}}
                        Nenhuma transação
                {{/each}}
            </table>
        {{/paper-card}}
        {{#paper-card class="box-big" as |card|}}
            <div style="display: flex; flex-direction: row; justify-content: space-between;">
                <p class="flex-50">Extrato</p>
                <span class="flex-50" style="margin-top: 40px; margin-right: 10px;">
                    {{#paper-button href="" }}Ver todos{{/paper-button}}
                </span>
            </div>
            <table>
                <tr class="header">
                    <th>Data</th>
                    <th class="name">Produto</th>
                    <th>Quantidade</th>
                    <th>Custo</th>
                </tr>
                {{#each historic as |item|}}
                    <tr>
                        <th>{{item.date}}</th>
                        <th class="name">{{item.productName}}</th>
                        <th class="name">{{item.quantity}}</th>
                        <th>{{item.cost}}</th>
                    </tr>
                    {{else}}
                        Nenhuma transação
                {{/each}}
            </table>
        {{/paper-card}}
        {{#paper-card class="box-big" as |card|}}
            <div style="display: flex; flex-direction: row; justify-content: space-between;">
                <p class="flex-50">Média desvio padrão</p>
                <span class="flex-50" style="margin-top: 40px; margin-right: 10px;">
                    {{#paper-button href="" }}Ver todos{{/paper-button}}
                </span>
            </div>
        {{/paper-card}}
    </div>
</div>