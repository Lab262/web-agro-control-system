{{#if showPromptDialog}}
    {{add-product-modal onClose=(action "closePromptDialog") onSave=(action "closePromptDialog")}}
{{/if}}
<div class="supply-control">
    <h1>Controle de Estoque</h1>
    <span>
        {{#paper-button href="" onClick=(action "openPromptDialog") }}Adicionar novo produto{{/paper-button}}
    </span>
    {{#paper-card class="box-full" as |card|}}
        {{bar-graph-with-history overallChartData=overallChartData height=100 }}
    {{/paper-card}}
    {{#each products as |product index|}}
        {{#paper-card class="box-medium" as |card|}}
            <div class="header">
                <p>
                    {{product.name}}
                </p>
                <span>
                    {{#paper-button href="" onClick=(action "openPromptDialog") }}Editar{{/paper-button}}
                </span>
                <span>
                    {{#paper-button href="" onClick=(action "openPromptDialog") }}Ver Hist√≥rico{{/paper-button}}
                </span>
            </div>
            <div class="chart">
                {{#paper-card}}
                    <span class="top-label"> Quantidade</span>
                    {{ember-chart type="line" data=product.chartData options=product.chartData.options height=100}}
                    <span class="bottom-label"> Mes do ano</span>
                {{/paper-card}}
                <div class="legend">
                    {{#each product.months as |month|}}
                        <span>{{month}}</span>
                    {{/each}}
                </div>
            </div>
        {{/paper-card}}
        {{else}}
            Nenhum produto cadastrado
    {{/each}}
</div>